{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
      {
        "name": "Launch Chrome with Live Server",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:5501",  // Change port if different
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true
      }
    ]
  }
  